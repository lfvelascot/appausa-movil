<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="@drawable/degradeb"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/etbuscaru"
                    android:layout_width="399dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Ingrese el ID del usuario:"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bbuscarue"
                    android:layout_width="196dp"
                    android:layout_height="wrap_content"
                    android:text="Buscar" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Datos del usuario"
                android:textColor="@color/black"
                android:textSize="18dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="149dp"
                        android:layout_height="wrap_content"
                        android:text="Documento:"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/docue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="149dp"
                        android:layout_height="wrap_content"
                        android:text="Rol:"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/rolue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:text="Nombre:"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/nomue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:text="Fecha de nacimiento:"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/fechnacue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:text="Correo electronico:"
                        android:textColor="@color/black" />

                <TextView
                    android:id="@+id/emailue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:text="Telefono:"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/telefonoue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
                </LinearLayout>

                <Button
                    android:id="@+id/eliminaru1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eliminar" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>