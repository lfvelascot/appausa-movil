<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="@drawable/degradeb"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="Datos de la cuenta" />

    <EditText
        android:id="@+id/ccusuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Documento del usuario" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elija el perfil de la cuenta" />


    <RadioGroup
        android:id="@+id/rgperfilc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/administrador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admnistrador" />

        <RadioButton
            android:id="@+id/talentohumano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Talento Humano" />

        <RadioButton
            android:id="@+id/empleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empleado" />


    </RadioGroup>

    <Button
    android:id="@+id/crearcuenta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Crear Cuenta" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="Credenciales Generadas"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="Username:" />
        <TextView
            android:id="@+id/usergen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#CA1717"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView22"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="ContraseÃ±a:" />

        <TextView
            android:id="@+id/contragen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#CA1717" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    </ScrollView>
</LinearLayout>